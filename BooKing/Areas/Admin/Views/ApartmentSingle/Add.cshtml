@model ApartmentSaveModel

<form enctype="multipart/form-data" method="POST" class="add-apartment-form" id="add-apartment-form">

    <h1 class="admin-title">
        <input class="admin-title-input" asp-for="Name" placeholder="Apartment name" id="add-name" />
    </h1>

    <div class="form-group">
        <label asp-for="LocationName">Location</label>
        <input asp-for="LocationName" class="form-control" id="add-location" placeholder="Apartment location" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" id="add-description" placeholder="Apartment description"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Sleeps">Amount of sleeps</label>
        <input asp-for="Sleeps" class="form-control" id="add-sleeps" placeholder="Apartment sleeps" />
    </div>

    <div class="form-group">
        <label asp-for="ImageIds">Upload images</label>
        <input asp-for="ImageIds" id="add-images" type="hidden" />
        <vc:admin-image-modal-opener />
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="dense-btn" />
    </div>

</form>

<vc:admin-image-modal input-id="add-images" apartment-image-ids="@new List<int>()" />