@model ApartmentAddModel

<form enctype="multipart/form-data" asp-controller="ApartmentSingle" asp-action="CreateAndRedirectToEdit" method="POST" class="admin-apartment-form">

    <h1 class="admin-title">
        <input class="admin-title-input" asp-for="Name" placeholder="Apartment name" />
    </h1>

    <div class="form-group">
        <label asp-for="LocationName">Location</label>
        <input asp-for="LocationName" class="form-control" id="add-location" placeholder="Apartment location" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" id="add-description" placeholder="Apartment description"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Sleeps">Amount of sleeps</label>
        <input asp-for="Sleeps" class="form-control" id="add-sleeps" placeholder="Apartment sleeps" />
    </div>

    <div class="form-group">
        <label asp-for="Images">Amount of sleeps</label>
        <input asp-for="Images" class="form-control" id="add-images" placeholder="Choose files" />
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="dense-btn" />
    </div>

</form>