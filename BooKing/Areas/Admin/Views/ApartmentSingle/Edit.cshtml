@model ApartmentSaveModel

<form enctype="multipart/form-data" method="POST" class="admin-apartment-form" id="edit-apartment-form">

    <h1 class="admin-title">
        <input class="admin-title-input" asp-for="Name" placeholder="Apartment name" id="edit-name" required />
    </h1>

    <input asp-for="Id" type="hidden" id="edit-id" />

    <div class="form-group">
        <label asp-for="LocationName">Location</label>
        <input asp-for="LocationName" class="form-control" id="edit-location" placeholder="Apartment location" required />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" id="edit-description" placeholder="Apartment description" required></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Sleeps">Amount of sleeps</label>
        <input asp-for="Sleeps" class="form-control" id="edit-sleeps" placeholder="Apartment sleeps" required />
    </div>

    <div class="form-group">
        <label asp-for="ImageIds">Upload images</label>
        <input asp-for="ImageIds" id="edit-images" type="hidden" />
        <vc:admin-image-modal-opener />
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="dense-btn" />
    </div>

</form>

<vc:admin-image-modal input-id="edit-images" apartment-image-ids="@Newtonsoft.Json.JsonConvert.SerializeObject(Model.ImageIds)" />