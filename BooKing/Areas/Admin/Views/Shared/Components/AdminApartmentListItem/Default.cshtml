@model ApartmentModel

<div class="admin-apartments-list-item">
    <div class="admin-apartments-list-item__img-con">
        @if (Model.Images != null && Model.Images.Count > 0)
        {
            string imgPath = "~/uploads/" + Model.Images[0].FileLocation;

            <img class="admin-apartments-list-item__img" src="@imgPath" asp-append-version="true" />
        }
        <div class="admin-apartments-list-item__img-overlay">
            @Html.ActionLink("Edit", "Edit", "ApartmentSingle", new { id = Model.Id }, new { @class = "admin-apartment-list-item__img-overlay__option--edit" })
            @Html.ActionLink("Remove", "RemoveAndRedirectToList", "ApartmentsList", new { apartmentId = Model.Id }, new { @class = "admin-apartment-list-item__img-overlay__option--delete" })
        </div>
    </div>
    <h3 class="admin-apartments-list-item__title">@Model.Name</h3>
</div>